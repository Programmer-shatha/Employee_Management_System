@model IEnumerable<Salary>

@{
    ViewData["Title"] = "Salaries";
}

<h1>Salaries</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Add New Salary <i class='fas fa-wallet'></i></a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Payment Date</th>
            <th>Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Employee.FullName</td>
                <td>@item.PaymentDate.ToShortDateString()</td>
                <td>@item.Amount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SalaryId" class="btn btn-warning"><i class="fa fa-edit text-white"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.SalaryId" class="btn btn-danger"><i class="fa fa-trash text-white"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
