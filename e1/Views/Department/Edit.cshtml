@model Department


<h1> Edit Department</h1>
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="@Model.DepartmentId" />
    <div class="row class=" form-group"">
            <div class="col-sm-12">
            <label for="DepartmentName" class="control-label">Name</label>
            <input asp-for="@Model.Name" class="form-control" name="Name" id="DepartmentName" />
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 d-flex justify-content-center mt-2">
            <button type="submit" class="btn btn-info p-2">Update</button>
            </div>
        </div>
    </form>

<div class="mt-2">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
